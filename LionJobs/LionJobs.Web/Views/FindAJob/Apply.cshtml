@model LionJobs.Models.Job
@{
    ViewBag.Title = "Apply";
}

<h3>Are you sure you want to apply for job:</h3>

<h4>@Model.Title</h4>
<h5>@Model.Description</h5>
@using (Html.BeginForm("Apply", "FindAJob", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Apply" />
        </div>
    </div>
}



