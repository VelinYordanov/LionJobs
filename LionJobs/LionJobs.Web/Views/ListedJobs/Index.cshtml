@model IEnumerable<LionJobs.ViewModels.ListedJobsViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h3>Your jobs:</h3>
    @foreach (var job in Model)
    {
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">@job.Name</span>
                        <p>
                            @job.Description
                        </p>
                    </div>
                    @foreach (var candidate in job.Candidates)
                    {
                        <div class="card-action">
                            <a href="~/listedjobs/details?id=@candidate.Id&job=@job.Id">@candidate.FirstName @candidate.LastName</a>
                        </div>
                    }                    
                </div>
            </div>
        </div>
    }
</div>


